# DEFAULT init for acq48x, 10,000,000 Hz, auto soft trigger
/usr/local/CARE/acq2106\+acq48x.init 10M
# Local clock and soft trigger
set.site 0 sync_role master 10000000
# Alternate FPCLK and FPTRG.
#set.site 0 sync_role fpmaster 10000000 1000000
#
judgement() {
# short trace length, rapid update 50Hz possible
set.site 1 RTM_TRANSLEN ${1:-128}
set.site 1 RGM RTM
set.site 1 RGM:DX ${2:-d0}
set.site 1 RGM:SENSE rising
}
# see /mnt/local/sysconfig/epics.sh
source /mnt/local/sysconfig/acq400.sh
[ ! -z "$ACQ400_JUDGEMENT" ] && judgement $ACQ400_JUDGEMENT

